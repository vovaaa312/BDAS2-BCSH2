<Window x:Class="VetClinic.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic.View"
        xmlns:tab1data = "clr-namespace:VetClinic.ViewModel"
        xmlns:views ="clr-namespace:VetClinic.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Window.DataContext>
        <tab1data:VeterinariMazlickyPohledViewModel/>
    </Window.DataContext>
    
    <Grid Margin="0,0,0,0">


    
        <TabControl Name="Tab1">
            
            <TabItem Header="Tab1">
                
                <Grid Margin="220,0,0,0" HorizontalAlignment="Left"  Width="1174" >

                    <views:Table1/>
                </Grid>
            </TabItem>
            <TabItem Header="Tab2">
                <Grid Margin="220,0,0,0" HorizontalAlignment="Left" Width="1174" >

                    <views:Table2/>
                </Grid>
            </TabItem>

        </TabControl>

        <Grid Margin="8,25,0,0" HorizontalAlignment="Left" Width="200" >
            <ListView Name="TablesListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0, 0, 0, 100" SelectionChanged="ListView_SelectionChanged" Width="200">
                <ListView.Background>
                    <ImageBrush ImageSource="Assets/papousek.png" Stretch="UniformToFill"/>
                </ListView.Background>
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Name="LoginBtn" Content="Login" Width="80" Margin="0,0,0,37" HorizontalAlignment="Center" Height="30" VerticalAlignment="Bottom"/>
            
        </Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/papousek.png" Stretch="UniformToFill"/>
        </Grid.Background>


    </Grid>
</Window>
    

